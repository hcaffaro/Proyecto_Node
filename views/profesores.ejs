<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/headerStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="icon" href="img/logo-grupo.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand&display=swap" rel="stylesheet">
    <title>Profesores</title>
</head>

<body>
    <header>
    </header>

    <main>
        <section class="secciones-profesores" id="seccion4">
            <div class="grid-container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
                    <% users.forEach(function(user){ %>
                        <div class="col">
                            <div class="card" onclick="toggleSelection(this)">
                                <img src="/img/<%= user.photo %>" alt="Alumno <%= user.id_data %>">
                                <div class="container">
                                    <h4><b>
                                            <%= user.name %>
                                                <%= user.surname %>
                                        </b></h4>
                                    <p><strong>Fecha de Nacimiento:</strong>
                                        <%= user.birthdate %>
                                    </p>
                                    <p><strong>Nivel de Estudios:</strong>
                                        <%= user.schooling %>
                                    </p>
                                    <p><strong>Comisi√≥n:</strong>
                                        <%= user.commission %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
        </section>

        <section class="secciones-gruposConformados" id="seccion5">
            <div class="grid-container">
                <h2>Alumnos seleccionados:</h2>
                <div id="selected-container" class="row row-cols-1 row-cols-sm-2 row-cols-md-4"></div>
            </div>
            <div>
                <form id="group-form" action="/createGroup?email=<%= email %>" method="post">
                    <input type="hidden" name="id_student1" id="id_student1">
                    <input type="hidden" name="id_student2" id="id_student2">
                    <input type="hidden" name="id_student3" id="id_student3">
                    <input type="hidden" name="id_student4" id="id_student4">
                    <input type="hidden" name="commission" id="commission" value="<%= users[0].commission %>">
                    <button type="submit" class="btn-form">Armar grupo</button>
                </form>
            </div>
        </section>
    </main>

    <script>
        const maxSelection = 4;
        const selectedContainer = document.getElementById('selected-container');

        function toggleSelection(card) {
            const selectedCards = document.querySelectorAll('.secciones-profesores .card.selected');

            if (card.classList.contains('selected')) {
                card.classList.remove('selected');
                removeSelectedCard(card);
            } else if (selectedCards.length < maxSelection) {
                card.classList.add('selected');
                addSelectedCard(card);
            } else {
                alert(`Solo puedes seleccionar hasta ${maxSelection} alumnos.`);
            }

            updateFormInputs();
        }

        function addSelectedCard(card) {
            const clone = card.cloneNode(true);
            clone.classList.remove('selected');
            clone.onclick = function () {
                removeSelectedCard(card);
                card.classList.remove('selected');
                updateFormInputs();
            };
            const colDiv = document.createElement('div');
            colDiv.classList.add('col');
            colDiv.appendChild(clone);
            selectedContainer.appendChild(colDiv);
        }

        function removeSelectedCard(card) {
            const selectedCards = selectedContainer.children;
            for (let i = 0; i < selectedCards.length; i++) {
                if (selectedCards[i].querySelector('img').src === card.querySelector('img').src) {
                    selectedContainer.removeChild(selectedCards[i]);
                    break;
                }
            }
        }

        function updateFormInputs() {
            const selectedCards = document.querySelectorAll('.secciones-profesores .card.selected');
            for (let i = 0; i < maxSelection; i++) {
                if (selectedCards[i]) {
                    document.getElementById(`id_student${i + 1}`).value = selectedCards[i].querySelector('img').alt.split(' ')[1];
                } else {
                    document.getElementById(`id_student${i + 1}`).value = '';
                }
            }
        }

    </script>

    <footer>
    </footer>

    <script src="js/headerFooter.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

</body>

</html>